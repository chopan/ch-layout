      margin:0px;
      font-size:16px;
  }
}
@mixin borde($radius: 5px) {
    border-radius:$radius;
    -moz-border-radius:$radius;
    -webkit-border-radius:$radius;
}
@mixin sombra {
    box-shadow: 0px 2px 5px $sombraBg;
    -webkit-box-shadow:0px 2px 5px $sombraBg;
    -moz-box-shadow:0px 2px 5px $sombraBg;
}

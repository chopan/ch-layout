}
@mixin iconLink($top, $imagen, $right:3px, $left:none){
    @if $type == controller {
    background-image: url(../../images/fatcow/16/#{$imagen}.png);
    } @else if $type == estilo {
    background-image: url(../images/fatcow/16/#{$imagen}.png);
    }
    background-repeat: no-repeat;
    background-position: 5px 5px;
    position:absolute;
    left:#{$left};
    right:#{$right};
    top:#{$top};
    text-indent: -9000%;
    padding:7px;
    width:10px;
    height:10px;
    margin:0px;
}
